#include <SoftwareSerial.h>
#include <Servo.h>
Servo servo;
int servoPin = 9;
int TX = 2;
int RX = 3;
SoftwareSerial bluetooth(TX,RX);

void setup() {
  servo.write(45);
  servo.attach(servoPin);  // 서보 모터 연결 핀
  bluetooth.begin(9600);
}

void loop() {
  while(bluetooth.available()){
    //Serial.write(bluetooth.read()); // 시리얼 모니터에 데이터 출력

    if(bluetooth.read() == 'c'){
        servo.write(90); 
    }
    else if(bluetooth.read() == 'o'){
        servo.write(0);
    }
  }
}
/*//블루투스 테스트
#include <SoftwareSerial.h>
 
int RX=7;
int TX=8;
